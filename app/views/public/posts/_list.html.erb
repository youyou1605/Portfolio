    <h3>introduction <%= customer.introduction %></h3>
      <% if customer.user_name != "guestuser" %>
        <p><%= link_to edit_public_customer_path(customer), class:"btn btn-outline-secondary btn-block" do %></p>
　      <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>

    <%= link_to "フォロー", public_relationships_followings_path(customer),class: 'btn btn-primary btn-block'%> </br>
    <%= link_to "フォロワー", public_relationships_followers_path(customer),class: 'btn btn-primary btn-block'%>

  <h1>New post</h1>
