<% if customer_signed_in? && current_customer.id != @customer.id %>
  <% if current_customer.following?(@customer) %>
    <%= link_to "フォロー解除", public_customer_relationship_path(current_customer.relationships.find_by(follower: @customer)), method: :delete, remote: true %>
  <% else %>
    <%= link_to "フォロー", public_customer_relationships_path(follower: @customer), method: :post, remote: true %>
  <% end %>
<% end %>