<div class="container" >
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/posts/list', customer: @customer, post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <% @customers.each do |customer| %>
      <div>
        <%= image_tag customer.get_profile_image(100,100) %>
        <p>name <%= customer.user_name %></p>
        <%= link_to "Show", public_customer_path(customer.id) %>
        <% if current_customer.following?(customer) %>
          <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", public_customer_relationships_path(customer.id), method: :post %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>