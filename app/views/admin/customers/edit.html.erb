<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3 table-secondary"><%= @customer.user_name %> さんの会員情報編集</h2>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>ユーザーネーム</td>
          <td><%= f.text_field :user_name, autocomplete: "user_name" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, size: "40*40", autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :会員ステータス %></td>
          <td>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: :true %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: :false %>
          </td>
        </tr>
        <tr>
          <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
  </div>
